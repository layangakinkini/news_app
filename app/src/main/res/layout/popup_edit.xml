<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/popup_bg"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <TextView
        android:text="EDIT"
        android:fontFamily="@font/lalezar_regular"
        android:textStyle="bold"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_username"
        android:hint="User Name"
        android:textColorHint="#888888"
        android:fontFamily="@font/lalezar_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/username_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This will be your new user name to login"
        android:textColor="#FF7601"
        android:textStyle="bold"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_marginTop="4dp"/>

    <EditText
        android:id="@+id/edit_email"
        android:hint="Email"
        android:textColorHint="#888888"
        android:fontFamily="@font/lalezar_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_ok"
            android:text="OK"
            android:textColor="#000000"
            android:fontFamily="@font/lalezar_regular"
            android:textSize="20dp"
            android:layout_weight="1"
            android:backgroundTint="#52FC14"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_cancel"
            android:text="CANCEL"
            android:fontFamily="@font/lalezar_regular"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:backgroundTint="#F81414"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
</LinearLayout>

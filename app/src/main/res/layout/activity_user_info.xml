<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_background_gradient"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:id="@+id/userInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER INFO"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="40dp" />

    <!-- Profile Icon -->
    <ImageView
        android:id="@+id/profileIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/person_add_24dp_1f1f1f_fill0_wght400_grad0_opsz24"
        android:contentDescription="Profile Icon"
        android:background="@drawable/user_circle_background"
        android:padding="20dp" />

    <!-- Info Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/info_card_background"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="4dp"
        android:clipToPadding="false"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name : name_here"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email : sample@email.com"
            android:layout_marginTop="10dp"
            android:textColor="#555555" />
    </LinearLayout>

    <!-- Sign Out Button -->
    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SIGN OUT"
        android:background="@drawable/button_gradient"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp" />

    <!-- Edit Button -->
    <Button
        android:id="@+id/btnEdit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="EDIT"
        android:background="@drawable/button_gradient"
        android:textColor="#FFFFFF" />
</LinearLayout>
